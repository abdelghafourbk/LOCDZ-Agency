<%- include('header') -%>

    <section class="pb-4 pt-4">
        <div class="d-flex mb-2 align-items-center">
            <h2><% cat %> Cars</h2>
        </div>

        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

            <% if(vehicules!= ''){ %>
                <% vehicules.forEach(function(vehicule, index) { %>            
            <a href="/vehicules/#" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="/assets/<%- vehicule.carImage %>" alt=" <%- vehicule.model %> <%- vehicule.name %> " loading="lazy">
                </div>
                <div class="pt-1"> <%- vehicule.model %> <%- vehicule.name %></div>
            </a>
            <% }) %>
            <% } %>
        </div>

    </section>
<%- include('footer') -%>