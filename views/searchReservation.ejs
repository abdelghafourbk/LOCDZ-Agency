<%- include('header') -%>

<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

    <% if(reservation!= ''){ %>
        <% reservation.forEach(function(reservation, index) { %>            
    <a href="/reservation/<%- reservation._id %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
            <img src="/assets/<%- vehicule[0].carImage %>" alt=" <%- reservation.resID %> <%- reservation.name %> " loading="lazy">
        </div>
        <div class="pt-1"> <%- reservation.resID %> by <%- reservation.firstName %></div>
    </a>
    <% }) %>
    <% }else{ %>
        <p>No Results, Try another thing!</p>
        <%}%>
</div>


<%- include('footer') -%>